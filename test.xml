<vnx xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="/usr/share/xml/vnx/vnx-2.00.xsd">
  <global>
    <version>2.0</version>
    <scenario_name>Scenario2</scenario_name>
    <automac offset="5"/>
    <vm_mgmt type="none" />
    <!--vm_mgmt type="private" network="10.250.0.0" mask="24" offset="16">
       <host_mapping />
    </vm_mgmt-->
    <vm_defaults>
      <console id="0" display="no"/>
      <console id="1" display="yes"/>
    </vm_defaults>
    <!--<netconfig stp="on"/>-->
  </global>


  <!-- NET DEFINITION -->

  <!-- virbr0 (192.168.122.0/24) -->
  <net name="virbr0" mode="virtual_bridge" managed="no"/>
  <!-- NetMgt (10.100.0.0/24) -->
  <net name="Net_ctrl" mode="virtual_bridge"/>

  <!-- SWITCHES OPENFLOW -->
  <net name="Net0" mode="openvswitch" hwaddr="00:00:00:00:01:00" controller='tcp:10.100.11.1:6633' of_version="OpenFlow13" fail_mode='secure' >
    <connection name='0_2' net='Net2'></connection>
	<connection name='0_3' net='Net3'></connection>
    <connection name='0_4' net='Net4'></connection>
  </net>

  <net name="Net1" mode="openvswitch" hwaddr="00:00:00:00:01:01" controller='tcp:10.100.11.1:6633' of_version="OpenFlow13" fail_mode='secure' >
  	<connection name='1_2' net='Net2'></connection>
    <connection name='1_3' net='Net3'></connection>
    <connection name='1_4' net='Net4'></connection>
  </net> 

  <net name="Net2" mode="openvswitch" hwaddr="00:00:00:00:01:02" controller='tcp:10.100.11.1:6633' of_version="OpenFlow13" fail_mode='secure'>
  </net>

  <net name="Net3" mode="openvswitch" hwaddr="00:00:00:00:01:03" controller='tcp:10.100.11.1:6633' of_version="OpenFlow13" fail_mode='secure'>
  </net>
  
   <net name="Net4" mode="openvswitch" hwaddr="00:00:00:00:01:04" controller='tcp:10.100.11.1:6633' of_version="OpenFlow13" fail_mode='secure'>
  </net>


 <!-- ONOS -->
  <vm name="ONOS" type="lxc" arch="x86_64">
    <filesystem type="cow">/usr/share/vnx/filesystems/vnx_rootfs_lxc_ubuntu64-16.04-v025-onos-1.11.1</filesystem>
    <if id="1" net="Net_ctrl">
      <ipv4>10.100.11.1/24</ipv4>
  	</if>
  	<if id="9" net="virbr0">
      <ipv4>dhcp</ipv4>
    </if>
  	
  	<!-- Copy configuration files -->
    <filetree seq="on_boot" root="/root/conf/">conf/ONOS/start-ONOS.sh</filetree>
    <filetree seq="on_boot" root="/opt/onos/">conf/ONOS/options</filetree>
    <filetree seq="on_boot" root="/opt/onos/config/">conf/ONOS/network-cfg.json</filetree>


	<!-- Configure and Start ONOS (IPv4) -->
    <exec seq="config-ONOS" type="verbatim">
        echo 'alias onos-client=/opt/onos/karaf/bin/client' >> /root/.bashrc
        <!--/root/conf/config-ONOS_ipv4.sh-->
        /root/conf/start-ONOS.sh
    </exec>
    
</vm>




<!-- ROUTER -->
<!-- ROUTER AS101 -->
  <vm name="R-101" type="lxc" arch="x86_64">
    <filesystem type="cow">/usr/share/vnx//filesystems/vnx_rootfs_lxc_ubuntu64-16.04-v025-onos-1.11.1</filesystem>
    <if id="1" net="Net4">
      <ipv4>10.1.102.2/24</ipv4>
    </if>
    <if id="9" net="virbr0">
      <ipv4>dhcp</ipv4>
    </if>
    <!-- Enable IP forwarding in this node -->
    <forwarding type="ip"/>
    <route type="ipv4" gw="10.1.102.1">10.1.100.0/24</route>   
    <route type="ipv4" gw="10.1.102.1">10.1.101.0/24</route>   
    <filetree seq="on_boot" root="/root/">conf/hosts</filetree>
    <exec seq="on_boot" type="verbatim">
        cat /root/hosts >> /etc/hosts;
        rm /root/hosts;
    </exec>
</vm>




  <!-- NODES -->
  <vm name="h1" type="lxc" arch="x86_64">
    <filesystem type="cow">/usr/share/vnx/filesystems/vnx_rootfs_lxc_ubuntu64-16.04-v025-onos-1.11.1</filesystem>
    <if id="1" net="Net2" >
      <ipv4>10.1.100.11/24</ipv4>
    </if>
    <route type="ipv4" gw="10.1.100.1">default</route>   
    <filetree seq="on_boot" root="/root/">conf/hosts</filetree>
    <exec seq="on_boot" type="verbatim">
        cat /root/hosts >> /etc/hosts;
        rm /root/hosts;
    </exec>
  </vm>

  <vm name="h2" type="lxc" arch="x86_64">
    <filesystem type="cow">/usr/share/vnx/filesystems/vnx_rootfs_lxc_ubuntu64-16.04-v025-onos-1.11.1</filesystem>
    <if id="1" net="Net2" >
      <ipv4>10.1.100.12/24</ipv4>
    </if>
    <route type="ipv4" gw="10.1.100.1">default</route>   
    <filetree seq="on_boot" root="/root/">conf/hosts</filetree>
    <exec seq="on_boot" type="verbatim">
        cat /root/hosts >> /etc/hosts;
        rm /root/hosts;
    </exec>
  </vm>

  <vm name="h3" type="lxc" arch="x86_64">
    <filesystem type="cow">/usr/share/vnx/filesystems/vnx_rootfs_lxc_ubuntu64-16.04-v025-onos-1.11.1</filesystem>
    <if id="1" net="Net3" >
      <ipv4>10.1.101.11/24</ipv4>
    </if>
    <route type="ipv4" gw="10.1.101.1">default</route>   
    <filetree seq="on_boot" root="/root/">conf/hosts</filetree>
    <exec seq="on_boot" type="verbatim">
        cat /root/hosts >> /etc/hosts;
        rm /root/hosts;
    </exec>
  </vm>

  <vm name="h4" type="lxc" arch="x86_64">
    <filesystem type="cow">/usr/share/vnx/filesystems/vnx_rootfs_lxc_ubuntu64-16.04-v025-onos-1.11.1</filesystem>
    <if id="1" net="Net3" >
      <ipv4>10.1.101.12/24</ipv4>
    </if>
    <route type="ipv4" gw="10.1.101.1">default</route>   
    <filetree seq="on_boot" root="/root/">conf/hosts</filetree>
    <exec seq="on_boot" type="verbatim">
        cat /root/hosts >> /etc/hosts;
        rm /root/hosts;
    </exec>
  </vm>


  <host>
        <hostif net="Net_ctrl">
            <ipv4>10.100.11.3/24</ipv4>
        </hostif>
  </host>


</vnx>
